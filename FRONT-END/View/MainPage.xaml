<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:FRONT_END.ViewModels"
             xmlns:entities="clr-namespace:LIBRARY.Shared.Entity;assembly=LIBRARY.Shared"
             x:Class="FRONT_END.View.MainPage"
             x:Name="Ecommerce"
             Title="Gestión de Países">

    <ContentPage.BindingContext>
        <!-- Se asigna desde el code-behind (MainPage.xaml.cs) -->
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto,Auto,*,Auto" Padding="20" RowSpacing="10">

        <!-- Agregar país -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" ColumnSpacing="10">
            <Entry Placeholder="Nombre del país"
                   Text="{Binding NewCountryName}"
                   MaxLength="100"
                   Grid.Column="0" />
            <Button Text="Agregar" 
                    Command="{Binding AddCountryCommand}"
                    Grid.Column="1"
                    BackgroundColor="Green"
                    TextColor="White" />
        </Grid>

        <!-- Mensaje de error -->
        <Label Grid.Row="1" 
               Text="{Binding ErrorMessage}" 
               TextColor="Red"
               IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}" />

        <!-- Lista de países -->
        <RefreshView Grid.Row="2" 
                     Command="{Binding LoadCountriesCommand}"
                     IsRefreshing="{Binding IsBusy}">
            <CollectionView ItemsSource="{Binding Countries}"
                            SelectionMode="Single"
                            SelectedItem="{Binding SelectedCountry}">
                <CollectionView.EmptyView>
                    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                        <Label Text="No hay países disponibles" FontSize="Medium" TextColor="Gray" />
                        <Button Text="Recargar" Command="{Binding LoadCountriesCommand}" 
                                HorizontalOptions="Center" Margin="0,10,0,0" />
                    </StackLayout>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="entities:Country">
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Editar"
                                               BackgroundColor="Orange"
                                               Command="{Binding BindingContext.EditCountryCommand, Source={x:Reference MainPage}}"
                                               CommandParameter="{Binding .}" />
                                    <SwipeItem Text="Eliminar"
                                               BackgroundColor="Red"
                                               Command="{Binding BindingContext.DeleteCountryCommand, Source={x:Reference MainPage}}"
                                               CommandParameter="{Binding .}" />
                                </SwipeItems>
                            </SwipeView.RightItems>
                            <Grid Padding="10">
                                <Frame BorderColor="LightGray" CornerRadius="5" Padding="10">
                                    <StackLayout>
                                        <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="Medium" />
                                        <Label Text="{Binding StatetsNumber, StringFormat='Estados/Departamentos: {0}'}" TextColor="Gray" />
                                    </StackLayout>
                                </Frame>
                            </Grid>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <!-- Botones para país seleccionado -->
        <Grid Grid.Row="3" ColumnDefinitions="*,*" ColumnSpacing="10" 
              IsVisible="{Binding SelectCountry, Converter={StaticResource IsNotNullConverter}}">
            <Button Text="Editar" 
                    Command="{Binding UpdateCountry}"
                    Grid.Column="0"
                    BackgroundColor="Orange"
                    TextColor="White" />
            <Button Text="Eliminar" 
                    Command="{Binding DeleteCountry}"
                    Grid.Column="1"
                    BackgroundColor="Red"
                    TextColor="White" />
        </Grid>
    </Grid>
</ContentPage>
